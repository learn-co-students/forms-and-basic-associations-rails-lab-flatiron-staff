<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <h3>Genre</h3>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>

  <br />

</br>
  <h3>Notes</h3>
  <input id= "song_notes_1" name="song[note_contents][]" type="text"/>
  <input id= "song_notes_2" name="song[note_contents][]" type="text"/>
  <input id= "song_notes_3" name="song[note_contents][]" type="text"/>
</br>

  <%= f.submit %>
<% end %>
